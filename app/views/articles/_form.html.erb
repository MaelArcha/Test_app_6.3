<div class="container">
  <div class="row justify-content-center">
    <div class="col-10"> 
      <%= render 'shared/errors'%>
      <%= form_with(model:@article,class: "shadow p-4 mb-5 bg-info rounded" ,local: true)  do |f|%>
        <div class="form-group row">
        
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title"%>
          </div>
        </div> <br/>
        <div class="form-group row">
          
          <%= f.label :description, class: "col-2 col-form-label text-light"%>
          <div class="col-10"> 
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description"%>  
          </div> 
        </div>
        <br/>
        
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg"%> 
        </div>
      <% end %>
    </div>
    <div class="mb-3"> 
      <%= link_to '[ Cancel & Return to Articles listing ]', articles_path, class: "btn btn-outline-warning btn-lg" %>      
    </div>
  </div>
</div>