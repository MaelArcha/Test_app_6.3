<h1 class="text-center mt-4"> Create a new Category </h1>
<br/>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10"> 
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model:@category,class: "shadow p-4 mb-5 bg-info rounded" ,local: true)  do |f|%>
        <div class="form-group row">
        
          <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name"%>
          </div>
        </div> 

        <br/>
        
        <div class="form-group row justify-content-center">
          <div class="col text-center">
            <%= f.submit class: "btn btn-outline-light  btn-lg "%>
          </div>   
        </div>
      <% end %>

    </div>
    <div class="form-group row justify-content-center">
      <div class=" col text-center" >
        <div class="mb-3"> 
          <%= link_to '[ Cancel & Return to Articles listing ]', articles_path, class: "btn btn-outline-primary btn-lg" %>
        </div>   
      </div>         
    </div>
  </div>
</div>

